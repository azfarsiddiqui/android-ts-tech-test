<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="60dp"
        android:layout_height="45dp"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_thumbnail"
        android:layout_marginLeft="7dp"
        style="@style/solution_title"
        tools:text="This is a pretty long title.." />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/solution_description"
        android:layout_below="@id/txt_title"
        android:layout_alignLeft="@+id/txt_title"
        android:layout_marginTop="3dp"
        tools:text="This is a pretty long description. This is a pretty long description This is a pretty long description  .." />


</RelativeLayout>
